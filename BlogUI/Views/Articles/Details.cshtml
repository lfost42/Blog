@using BlogLibrary.Databases.Interfaces
@inject IImageService imageService
@model BlogLibrary.Models.ArticleModel

@{
    ViewData["Title"] = "Details";
}

<h4>@Model.SeriesModel.Title - @Model.Title</h4>

    Created: @Model.Created.ToShortDateString() | Status: @Model.Status
    <br />
    <hr />
    <p>
        @Model.Summary
    </p>
    <div class="row">
        @if (Model.Image != null)
        {
            <img height="300px" src="@imageService.DecodeImage(Model.Image.ImageData, Model.Image.ImageExtension)" />
        }
    </div>
    <div class="col-lg-8 col-md-10">
        <p>
            @Html.Raw(Model.Body)
        </p>
    </div>
    <hr />

    <hr />
    <article>
        <div class="row">
            <div class="col text-center font-weight-bold h3">
                Article Tags
            </div>
        </div>
        <div class="row">
            <div class="col text-center">
                @foreach (var tag in Model.Tags)
                {
                    <a class="btn btn-outline-dark" asp-action="TagIndex" asp-route-tag="@tag.Tag.ToLower()">#@tag.Tag</a>
                }
            </div>
        </div>
    </article>
    <div>
        <a asp-action="Edit" asp-route-id="@Model.Id" asp-route-slug="@Model.Slug">Edit</a> |
        <a asp-action="Index">Back to List</a>
    </div>
